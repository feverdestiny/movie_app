.bande {
  height: 400rpx;
  width: 100%;
}
.status_bar {
  height: var(--status-bar-height);
  width: 100%;
}
.content {
  font-size: 16px;
  color: #333;
}
.logo {
  height: 200rpx;
  width: 200rpx;
  margin-top: 200rpx;
}
.title {
  font-size: 36rpx;
  color: #8f8f94;
}
.list-rm {
  margin-top: 20rpx;
}
.list-rm .title-head {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.list-rm .title-head .item1 {
      padding-left: 20rpx;
      width: 60rpx;
}
.list-rm .title-head .item1 .img {
        width: 100%;
        height: 100%;
}
.list-rm .title-head .item2 {
      font-size: 34rpx;
      height: 60rpx;
      line-height: 60rpx;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
}
.list-rm .title-head .item3 {
      width: 200rpx;
      font-size: 25rpx;
      color: #ffb90f;
      height: 60rpx;
      line-height: 60rpx;
      text-align: right;
      padding-right: 10rpx;
}
.list-rm .title-content {
    margin-top: 20rpx;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    -webkit-flex-wrap: wrap;
            flex-wrap: wrap;
}
.list-rm .title-content .content-item {
      margin: 0 10rpx;
      margin-bottom: 20rpx;
      width: calc(33.3% - 20rpx);
}
.list-rm .title-content .content-item .main {
        border-radius: 6px;
        box-shadow: 6px 6px 20px #999;
        position: relative;
        height: 300rpx;
        width: 100%;
        background-size: 100% 100%;
}
.list-rm .title-content .content-item .main .tips {
          padding: 5rpx 10rpx;
          display: block;
          position: absolute;
          overflow: hidden;
          font-size: 25rpx;
          top: 0;
          left: 0;
          overflow: hidden;
          color: #fff;
          text-align: center;
}
.list-rm .title-content .content-item .main .red {
          border-radius: 6px 0 6px 0;
          background: #fa474b;
          background: -webkit-linear-gradient(right, #fa6567 0, #fa8587 100%);
          background: linear-gradient(to left, #fa6567 0, #fa8587 100%);
          box-shadow: 0 2px 6px rgba(228, 63, 66, 0.2);
}
.list-rm .title-content .content-item .main .duration {
          border-radius: 6px 0 6px 0;
          position: absolute;
          bottom: 0;
          right: 0;
          height: 40rpx;
          line-height: 40rpx;
          padding: 0 10rpx;
          font-size: 25rpx;
          color: #fff;
          background: rgba(0, 0, 0, 0.6);
          overflow: hidden;
}
.list-rm .title-content .content-item .name {
        margin-top: 20rpx;
        text-align: center;
}

