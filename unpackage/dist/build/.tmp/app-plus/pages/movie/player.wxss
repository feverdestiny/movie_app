.detail-add {
    margin: 30rpx 0;
    padding-bottom: 20rpx;
    background: #FFFFFF;
}
.detail-add-head {
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      padding: 20rpx;
      font-size: 30rpx;
