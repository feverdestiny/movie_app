              flex-wrap: wrap;
}
.detail-add-main .button {
        width: 150rpx;
        margin: 0 10rpx;
        text-align: center;
        padding: 10rpx 0;
        font-size: 30rpx;
        border-radius: 40rpx;
        color: #666;
        background: #f4f4f4;
}
.detail-add-main .active {
        color: #fff !important;
        box-shadow: 0 2px 6px rgba(228, 63, 66, 0.2) !important;
        background: -webkit-linear-gradient(right, #fa6567 0, #fa8587 100%) !important;
        background: linear-gradient(to left, #fa6567 0, #fa8587 100%) !important;
}
