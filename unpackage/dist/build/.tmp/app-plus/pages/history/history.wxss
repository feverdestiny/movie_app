.playhistory-head {
  padding: 10rpx 20rpx;
  position: relative;
  width: 100%;
  background: #ffff;
  border-bottom: 1rpx solid rgba(193, 193, 193, 0.709804);
}
.playhistory-head-flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    z-index: 2;
    position: relative;
}
.playhistory-head-flex .item1 {
      width: 250rpx;
      height: 300rpx;
      border-radius: 10px;
      background-size: 100% 100%;
}
.playhistory-head-flex .item1 .img {
        width: 100%;
        height: 100%;
        display: block;
        border-radius: 5px;
}
.playhistory-head-flex .item2 {
      color: #646464;
      -webkit-box-flex: 1;
      -webkit-flex: 1;
              flex: 1;
      min-width: 0;
      padding: 0rpx 25rpx;
      font-size: 27rpx;
}
.playhistory-head-flex .item2 .name {
        font-size: 40rpx;
}
.playhistory-head-flex .item2 .text {
        margin: 13rpx 0;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
}
.playhistory-head-flex .item2 .time {
        padding: 0 10rpx;
        color: #007AFF;
}
.playhistory-head-flex .item2 .buttom {
        margin-top: 40rpx;
}
.playhistory-head-flex .item2 .buttom .mini-btn {
          font-size: 30rpx;
          border-radius: 40rpx;
          box-shadow: 0 2px 6px rgba(228, 63, 66, 0.2);
          background: -webkit-linear-gradient(right, #fa6567 0, #fa8587 100%);
          background: linear-gradient(to left, #fa6567 0, #fa8587 100%);
}
.playhistory-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.playhistory-box .box-img {
    width: 300rpx;
}
.playhistory-box .box-info {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}

